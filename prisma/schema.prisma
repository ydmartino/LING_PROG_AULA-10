generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"//qual Ã© o banco utilizado puxado no .env
  url      = env("DATABASE_URL")
}

model Produto {
  id Int @id @default(autoincrement())
  nome String
  preco Float
  descricao String
  fotos Foto[]
}

model Foto {
  id  	      Int       @id @default(autoincrement())
  titulo      String
  url         String
  produtoId   Int
  user        Produto   @relation(fields: [produtoId], references: [id])
}